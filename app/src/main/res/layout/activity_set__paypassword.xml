<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.SetPassword.Set_Paypassword"
    android:background="#f2f2f2">

    <ImageButton
        android:id="@+id/pay_fanhui"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:src="@mipmap/fanhui" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="61dp"
        android:text="修改支付密码"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/pay_lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="旧支付密码:"
            android:textColor="#000000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/pay_oldpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/nnn"
            android:inputType="numberPassword"
            android:letterSpacing="0.97"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:maxLength="6"
            android:textSize="40sp" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="新支付密码:"
            android:textColor="#000000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/pay_newpass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/nnn"
            android:inputType="numberPassword"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:letterSpacing="0.97"
            android:maxLength="6"
            android:textSize="40sp" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="确认密码:"
            android:textColor="#000000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/pay_newpass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/nnn"
            android:inputType="numberPassword"
            android:letterSpacing="0.97"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:maxLength="6"
            android:textSize="40sp" />
    </LinearLayout>

    <Button
        android:id="@+id/paypass_b1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pay_lin1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/yaunjiao3"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="54dp" />

</RelativeLayout>