<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/yaunjiao2"
    android:layout_height="100dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/i_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/orderding"/>

    <TextView
        android:id="@+id/i_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="福建工程学院店"
        android:textSize="19sp"
        android:textColor="#000000"
        android:layout_marginLeft="70dp"/>
    <ImageView
        android:id="@+id/item_2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_toRightOf="@+id/i_tv1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="13dp"
        android:src="@mipmap/jianhao" />

    <TextView
        android:id="@+id/i2_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/i_tv1"
        android:text="2018.04.05"
        android:textSize="15sp"
        android:layout_marginLeft="70dp" />




    <TextView
        android:id="@+id/i_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="350dp"
        android:text="订单详情"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/i_fuhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/i_tv3"
        android:text="￥"
        android:layout_marginTop="77dp"
        android:textColor="#000000"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="30dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/i_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="38dp"
        android:text="0.00"
        android:layout_marginTop="70dp"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>

</LinearLayout>
