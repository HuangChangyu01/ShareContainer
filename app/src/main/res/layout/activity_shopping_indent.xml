<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Indent.ShoppingIndent"
    android:background="@color/gray">
    <RelativeLayout
        android:id="@+id/shopp_l1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#ff8533">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物订单"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <ListView
        android:id="@+id/shop_lv1"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/shopp_l1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/yaunjiao2"></ListView>

    <TextView
        android:id="@+id/zon_er"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_lv1"
        android:layout_marginTop="15dp"
        android:text="总额：￥"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_marginLeft="110dp"/>
    <TextView
        android:id="@+id/Zhong_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="24sp"
        android:layout_below="@+id/shop_lv1"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/zon_er"
       />



</RelativeLayout>